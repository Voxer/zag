@import "nib"
@import "../mixins"

dialog-side-padding = 20px

// Dialog container.
.dialog
  background white
  border 1px solid #888
  border-radius 4px
  box-shadow 0px 0px 0px 6px rgba(black, 0.4)
  fixed top 50% left 50%
  padding 50px dialog-side-padding 14px
  transform translate(-50%, -50%)
  z-index 50

// Header container.
.dialog-header
  absolute top 0px left 0px
  border-bottom 1px solid header-border
  padding 10px dialog-side-padding
  right 0px
  user-select none

// The actual header text.
.dialog-header-text
  color #333
  font-size 14px

// Close button: "X"
.dialog-close
  absolute top 0px right 0px
  background none
  border none
  border-left 1px solid header-border
  box-shadow none
  color #888
  font-size 20px
  padding 7px 14px
  &:hover
    background transparent
    color #c00


// A container for any buttons the dialog has (e.g. Delete, Create).
.dialog-footer
  position relative
  top 10px
  //> .button-delete
  > .button-create
    float right
  // The border on top
  &::before
    absolute left (-1 * dialog-side-padding) right (-1 * dialog-side-padding)
    border-top 1px solid header-border
    content ' '
    top -6px
