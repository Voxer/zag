@import "nib"
@import "../mixins"

// DIV container
// Its a circle.
.input-hint-trigger
  absolute top 50% right 4px
  background #f8f8f8
  border 1px solid #eee
  border-radius 10px
  display inline-block
  padding 3px 6px
  transform translateY(-50%)
  user-select none

// SPAN "?"
.input-hint-label
  color #666
  font-size 10px
  font-weight bold

// DIV
// The hint text.
.input-hint
  bottom 150%
  left 50%
  transform translateX(-50%)
