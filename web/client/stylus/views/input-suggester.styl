@import "nib"
@import "../mixins"

// UL
.input-suggester
  background white
  border 1px solid header-border
  border-top none
  box-shadow 0px 0px 2px rgba(black, 0.05)
  font-family monospace
  font-size 11px
  list-style none
  max-height 150px
  overflow-x hidden
  overflow-y auto
  position absolute
  // Offset for the input border.
  transform translateY(1px)
  z-index z-input-suggester
  scrollbars()

// LI
.input-suggester-item
  cursor pointer
  padding 1px 10px
  white-space nowrap
  &:hover
    background lighten(selected-color, 80%)
