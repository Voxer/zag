@import "nib"
@import "../mixins"

// DIV
// Chart header container.
.chart-head
  absolute top 0px left 0px
  font-size 10px
  right 0px

// A
// Link to the chart.
.chart-head-title
  absolute top 4px left 18px
  color #333
  max-width 75%
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

// BUTTON
// Menu
.chart-head-actions
  absolute top 0px right 20px
  background transparent
  border none
  color #777
  font-size 16px
  padding 0px 4px
  &:hover, &:active
    background transparent
    box-shadow 0px 0px 2px rgba(black, 0.5)
