@import "nib"
@import "../mixins"

menu-bg = header-bg

// UL
.menu-tree
  background menu-bg
  box-shadow 0px 0px 0px 1px #ccc, 0px 1px 2px rgba(black, 0.2)
  list-style none
  position absolute
  user-select none
  z-index 5

// LI
//.menu-leaf

// LI
.menu-div
  background #eee
  height 1px
  width 100%

// DIV/A
.menu-leaf-label
  color #222
  cursor pointer
  display block
  padding 3px 14px
  &:hover
    background selected-color
    color white
    > .menu-parent
      color white
  &.disabled
    background menu-bg
    cursor default
    &, & > .menu-parent
      color #777


// SPAN triangle
.menu-parent
  float right
  font-size 7px
  color #444
  line-height 15px
