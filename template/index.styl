@import "nib"

user-drag(val)
  user-drag val
  -webkit-user-drag val

*
  margin 0px
  padding 0px

text-color = #222

body
  background white
  color text-color
  font-family Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 14px

::selection
  background #444
  color white
::-moz-selection
  background #444
  color white

feature-height = 200px
feature-width  = 300px

////////////////////////////////////////////////////////////////////////////////

.container-center
  margin 0px auto
  // image width + frame padding + frame margin + image border
  width (feature-width + 4px + 20px + 2px) * 3

////////////////////////////////////////

.header
  border-bottom 2px solid #ddd
  margin 0px 10px 10px

.header-links
  float right

.header-link
  color #444
  display inline-block
  padding 14px 8px
  &:hover
    text-decoration none

.header-title
  font-weight bold
  padding-left 0px

////////////////////////////////////////

.summary
  font-size 16px
  margin 22px
  text-align center

////////////////////////////////////////

frame-bg     = #f4f4f4
frame-border = darken(frame-bg, 10%)
frame-margin = 10px

.feature
  background frame-bg
  box-shadow 0px 0px 0px 1px frame-border
  float left
  margin 0px frame-margin 20px
  padding 2px
  position relative

.feature-link, .feature-label
  color text-color
  font-size 12px
  margin 0px
  text-align center
  text-decoration none

// The actual image, a png or gif.
.feature-image
  border 1px solid frame-border
  height feature-height
  user-drag none
  width feature-width

// Overlay over a feature's img when it is animatable but paused.
.feature-play-gif
  absolute top 3px left 3px
  background rgba(black, 0.15)
  border none
  box-shadow none
  color rgba(black, 0.7)
  cursor pointer
  font-size 40px
  height feature-height
  outline none
  width feature-width
  &:hover
    color rgba(black, 0.85)

.feature-gif > .feature-play-gif
  background transparent
  color transparent

////////////////////////////////////////////////////////////////////////////////

.documentation-setup
  margin 0px auto
  width 600px

h3, h4
  clear both
  text-align center

h3
  background frame-bg
  border 1px solid frame-border
  font-size 18px
  font-weight normal
  margin frame-margin
  padding 10px 0px

p
  margin 12px frame-margin
  line-height 17px

pre
  background #f8f8f8
  border 1px solid #ddd
  margin 0px (frame-margin + 16px)
  padding 2px

ul, ol
  margin-left 28px


.col-1, .col-2, .col-3
  float left
  height 246px

.col-1
  width 33.33%
.col-2
  width 66.66%
.col-3
  width 100%
